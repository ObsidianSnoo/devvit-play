    "@codemirror/lint": "6.4.1",
    "@codemirror/state": "6.2.1",
    "@codemirror/view": "6.18.1",
    "@devvit/previews": "0.10.5-next-2023-09-11-f52a6ae79.0",
    "@devvit/protos": "0.10.5-next-2023-09-11-f52a6ae79.0",
    "@devvit/public-api": "0.10.5-next-2023-09-11-f52a6ae79.0",
    "@devvit/runtime-lite": "0.10.5-next-2023-09-11-f52a6ae79.0",
    "@typescript/vfs": "1.5.0",
    "bundlesize": "0.18.1",
    "codemirror": "6.0.1",
    "esbuild": "0.19.2",
    "lit": "2.8.0",
    "prettier": "3.0.3",
    "typescript": "5.2.2",
    "vitest": "0.34.4"
  },
  "engines": {
    "node": ">=18.7.0"
  },
  "homepage": "https://github.com/reddit/devvit-play",
  "keywords": [
    "devvit",
    "playground"
  ],
  "license": "BSD-3-Clause",
  "name": "@devvit/play",
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "jsxSingleQuote": true,
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reddit/devvit-play.git"
  },
  "scripts": {
    "start": "tools/build.js --watch",
    "build": "tools/build.js && tsc --build",
    "test": "npm run formatter -- --check && npm run test:types && npm run test:unit && npm run build && bundlesize",
    "test:types": "tsc",
    "test:unit": "vitest --reporter=dot --run",
    "clean": "rm -rf dist src/bundler/tsd.json",
    "format": "npm run formatter -- --write",
    "formatter": "prettier --cache --log-level warn './**/*.{css,html,js,json,md,ts}'"
  },
  "type": "module",
  "version": "0.0.0"
